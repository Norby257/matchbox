<!-- container that holds our form that collects user info upon creating an account -->
<div class="container single-page">
    <div class="row ">
        <div class="col-lg-1"></div>
        <div class="col-lg-10">
            <h2 class="text-center divide">Please Update Your Information Below</h2>
            <form id="updateUser" data-userId="{{User.id}}" data-bucketId="{{User.bucket_id}}">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputFirstName">First Name</label>
                        <input value="{{User.firstName}}" type="text" class="form-control" id="inputFirstName" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputLastName">Last Name</label>
                        <input value="{{User.lastName}}" type="text" class="form-control" id="inputLastName" required>
                    </div>
                </div>
                <hr>
                <div id="shipping">
                    <div class="form-group">
                        <label for="inputAddress">Shipping Address</label>
                        <input value="{{User.ship_add1}}" type="text" class="form-control" id="inputAddress" required>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress2">Address 2</label>
                        <input value="{{User.ship_add2}}" type="text" class="form-control" id="inputAddress2">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputCity">City</label>
                            <input value="{{User.ship_city}}" type="text" class="form-control" id="inputCity" required>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputState">State</label>
                            <input value="{{User.ship_state}}" id="inputState" class="form-control" required>
                        </div>
                        <div class="form-group col-md-2">
                            <label for="inputZip">Zip</label>
                            <input value="{{User.ship_zip}}" type="text" class="form-control" id="inputZip" required>
                        </div>
                    </div>
                </div>
                <hr>

                {{#if User.bill_add1}}
                <div id="billing">
                    <div class="form-group">
                        <label for="inputAddress">Billing Address</label>
                        <input value="{{User.bill_add1}}" type="text" class="form-control bill" id="bAddress" required>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress2">Address 2</label>
                        <input value="{{User.bill_add2}}" type="text" class="form-control bill" id="bAddress2">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputCity">City</label>
                            <input value="{{User.bill_city}}" type="text" class="form-control bill" id="bCity" required>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputState">State</label>
                            <input value="{{User.bill_state}}" id="bState" class="form-control bill" required>
                        </div>
                        <div class="form-group col-md-2">
                            <label for="inputZip">Zip</label>
                            <input value="{{User.bill_zip}}" type="text" class="form-control bill" id="bZip" required>
                        </div>
                    </div>
                </div>

                {{else}}
                <div id="billing">
                    <div class="form-group">
                        <label for="inputAddress">Billing Address</label>
                        <input value="{{User.ship_add1}}" type="text" class="form-control bill" id="bAddress" required>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress2">Address 2</label>
                        <input value="{{User.ship_add2}}" type="text" class="form-control bill" id="bAddress2">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputCity">City</label>
                            <input value="{{User.ship_city}}" type="text" class="form-control bill" id="bCity" required>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputState">State</label>
                            <input value="{{User.ship_state}}" id="bState" class="form-control bill" required>
                        </div>
                        <div class="form-group col-md-2">
                            <label for="inputZip">Zip</label>
                            <input value="{{User.ship_zip}}" type="text" class="form-control bill" id="bZip" required>
                        </div>
                    </div>
                </div>
                {{/if}}

                <button type="submit" class="btn purchase-btn float-right">Save Changes</button>
                <div class="clearfix"></div>
            </form>
            <div class="col-lg-1"></div>
        </div>
    </div>
</div>